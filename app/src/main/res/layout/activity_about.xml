<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aboutbackground"
    tools:context="com.example.flavius6.nfcprofiles.About">

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="104dp"
        android:layout_height="101dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="272dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="257dp"
        android:layout_height="51dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="36dp"
        android:fontFamily="casual"
        android:text="NFC Profiles v3.5"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="345dp"
        android:layout_height="96dp"
        android:fontFamily="casual"
        android:text="This application has been developed for my bachelor's degree. It is ment to act as a profile settings manager."
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:typeface="serif"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintHorizontal_bias="0.521" />

    <TextView
        android:id="@+id/textView14"
        android:autoLink="web"
        android:layout_width="347dp"
        android:layout_height="89dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="37dp"
        android:fontFamily="casual"
        android:text="The project is open-source and can be found on the GitHub platform at https://github.com/flaviusteicu/NFC_Profiles_V3.5"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:layout_editor_absoluteX="-126dp" />

    <Button
        android:id="@+id/button"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/animation"
        android:layout_width="65dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/backbtn"
        android:elevation="14dp"
        android:onClick="BackButtonAbout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
